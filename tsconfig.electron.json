{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "outDir": "./electron-dist",
    "rootDir": "./electron",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": ["electron/**/*"],
  "exclude": ["node_modules", "electron-dist"]
}
